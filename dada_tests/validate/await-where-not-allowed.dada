fn not_async() {
    print("Hello, world").await
    #! ERROR await is not permitted outside of async functions
}

fn in_atomic_in_not_async() {
    atomic {
        print("Hello, world").await
        #! ERROR await is not permitted inside atomic sections
    }
}

async fn in_atomic_in_async() {
    atomic {
        print("Hello, world").await
        #! ERROR await is not permitted inside atomic sections
    }
}

async fn main() {
    print("Hello, world").await
}